include ../raiting/raiting.pug
mixin feedbackBox()
    .feedback-box
        .feedback-box--row.d-f  
            .feedback-box--col 
                .feedback-box--left
                    .feedback-box__avatar(style='background:url("./images/content/avatar.svg") no-repeat center / cover')
                    div 
                        .d-f.mt-tp-12
                            +rating({})
                        .feedback-box__data-mobile
                            p.feedback-box__verified.color-green Проверенный   
                            p 19.04.2021
                .feedback-box--review.review-box__footer-ui.d-f
                    each key in [["like", "4"], ["dislike", "1"]]
                        button.review-box__footer-button.d-f.ai-c.jc-c
                            .review-box__footer-button-amount= key[1]
                            img.review-box__footer-button-icon(src=`images/icons/${key[0]}.svg`, alt="" loading="lazy")
            .feedback-box--col 
                .feedback-box__title.d-f.jc-sb
                    .d-f.ai-c.grid
                        p.title-semibold Георгий
                        span курс “Дизайн сайтов на Tilda”
                    .d-f.ai-c.feedback-box__data
                        p.feedback-box__verified.color-green Проверенный   
                        p 19.04.2021
                div(data-text-more)
